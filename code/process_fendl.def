Bootstrap: docker
From: ubuntu:22.04

%files

    process_fendl.py /opt/process_fendl.py
    process_fendl_base.py /opt/process_fendl_base.py
    process_fendl_neutron.py /opt/process_fendl_neutron.py
    process_fendl_proton.py /opt/process_fendl_proton.py
    process_fendl_deuteron.py /opt/process_fendl_deuteron.py
    construct_xsd_file.py /opt/construct_xsd_file.py
    njoy_file_manipulation.py /opt/njoy_file_manipulation.py
    pdf_manipulation.py /opt/pdf_manipulation.py


%environment

    export LANG=C
    export LC_ALL=C


%post

    apt update &&
    apt install -y git=1:2.34.1-1ubuntu1.10 &&
    apt install -y cmake=3.22.1-1ubuntu1.22.04.2 &&
    apt install -y gfortran=4:11.2.0-1ubuntu1 &&
    apt install -y python-is-python3=3.9.2-2 &&
    apt install -y ghostscript=9.55.0~dfsg1-0ubuntu5.6 &&
    apt install -y exiftool &&
    apt install -y qpdf &&
    apt install -y locales &&
    cd /opt &&
    git clone https://github.com/IAEA-NDS/NJOY2016.git &&
    cd NJOY2016 &&
    # checkout NJOY2016.74 including patches from IAEA-NDS
    git checkout 818b45b508c24aa91fe4e1183b197f71b69ad161 &&
    mkdir bin && cd bin &&
    cmake -D CMAKE_BUILD_TYPE=Release .. &&
    make &&
    cd /usr/local/bin &&
    ln -s /opt/NJOY2016/bin

%runscript

    exec python /opt/process_fendl.py "$@"
