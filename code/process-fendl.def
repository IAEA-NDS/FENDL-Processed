Bootstrap: docker
From: ubuntu:22.04

%files

    process-fendl.py /opt/process-fendl.py
    construct_xsd_file.py /opt/construct_xsd_file.py

%post

    apt update &&
    apt install -y git=1:2.34.1-1ubuntu1.10 &&
    apt install -y cmake=3.22.1-1ubuntu1.22.04.1 &&
    apt install -y gfortran=4:11.2.0-1ubuntu1 &&
    apt install -y python-is-python3=3.9.2-2 &&
    apt install -y ghostscript=9.55.0~dfsg1-0ubuntu5.5 &&
    cd /opt &&
    git clone https://github.com/IAEA-NDS/NJOY2016.git &&
    cd NJOY2016 &&
    # checkout NJOY2016.72 including packages provided by IAEA-NDS
    git checkout 078f3ab033ed15340ec0c2ab1e2343e3a08d545c &&
    mkdir bin && cd bin &&
    cmake -D CMAKE_BUILD_TYPE=Release .. &&
    make &&
    cd /usr/local/bin &&
    ln -s /opt/NJOY2016/bin

%runscript

    exec python /opt/process-fendl.py
